<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:id="@+id/imageCardView">
    <ImageView
        android:id="@+id/recommendImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/recommend_test_image"
        android:scaleType="centerCrop"></ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@id/imageCardView"
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panasonic"></TextView>
    <TextView
        android:layout_below="@id/productName"
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥3000000">
    </TextView>
    <TextView
        android:layout_below="@id/productPrice"
        android:id="@+id/saleArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="東京都品川区"></TextView>
    </RelativeLayout>
</LinearLayout>